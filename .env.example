# LDAP server connection
LDAP_URL=ldaps://ldap.example.com:636
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=replace-with-bind-password

# Base DN for user search and creation
LDAP_BASE_DN=ou=users,dc=example,dc=com

# Object class used when creating users (comma-separated)
# Default: top,inetOrgPerson,organizationalPerson,person
LDAP_USER_OBJECT_CLASS=top,inetOrgPerson,organizationalPerson,person

# SCIM API authentication
API_KEY=replace-with-a-strong-secret

# TLS/SSL for the HTTPS server
SSL_CERT_PATH=/etc/scim-ldap-bridge/cert.pem
SSL_KEY_PATH=/etc/scim-ldap-bridge/key.pem

# Server
PORT=3000
